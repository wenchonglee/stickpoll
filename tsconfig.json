{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules", "backend/node_modules", "frontend/node_modules", "**/*.spec.ts"]
}
